bindsym $mod+Ctrl+Shift+d exec --no-startup-id thunar Documents
bindsym $mod+Shift+c exec --no-startup-id thunar Code
bindsym $mod+Shift+v exec --no-startup-id thunar Videos
bindsym $mod+Shift+p exec --no-startup-id thunar Pictures
bindsym $mod+Shift+m exec --no-startup-id thunar Music

# System
bindsym $mod+Ctrl+Shift+F9 exec i3-msg exit
bindsym $mod+Ctrl+Shift+F10 exec poweroff
bindsym $mod+Ctrl+Shift+F11 exec reboot
bindsym $mod+Ctrl+Shift+F12 exec systemctl suspend

